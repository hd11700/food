.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f7f7f7;
    padding: 20rpx;
  }
  
  .image {
    width: 100%;
    height: 300rpx;
    margin-top: 30rpx;
    border-radius: 8rpx;
  }
  
  .title {
    font-size: 45rpx;
    font-weight: bold;
    margin-top: 20rpx;
  }
  
  .subtitle {
    font-size: 30rpx;
    margin-top: 10rpx;
    color: #666666;
  }
  
  .step {
    margin-top: 10rpx;
    line-height: 1.5;
  }
  
  .content {
    margin-top: 30rpx;
    border-radius: 8rpx;
    background-color: #ffffff;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    padding: 20rpx;
  }
    
  .tool{
    margin-top: 20rpx;
  }
  
  .cicle-img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
  }
  
  
  .cicle-img image{
    width: 90rpx;
    height: 90rpx;
  }
  
  .share-img{
    margin-left: 30rpx;
  }
  
  .horizon{
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
  }
  