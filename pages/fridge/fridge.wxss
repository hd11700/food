.container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .fridge {
    width: 200px;
    height: 200px;
    background-color: gray;
    margin-bottom: 10px;
  }
  
  .title {
    font-size: 24px;
    font-weight: bold;
  }
  
  .subtitle {
    font-size: 18px;
  }
  
  .rect-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 300px;
    height: 80px;
    margin-top: 10px;
    border-radius: 5px;
    background-color: #e8cc9c;
  }
  
  .rect-container-reverse {
    flex-direction: row-reverse;
    background-color: #bad4c4;
  }
  
  .rect-icon {
    width: 30px;
    height: 30px;
    margin-right: 10px;
  }
  
  .rect-icon-left {
    margin-right: 0;
    margin-left: 10px;
  }
  
  .rect-text {
    font-size: 18px;
  }
  
 